<div
  class="grid mb-10 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 grid-cols-1 gap-4 md:gap-6 justify-items-center mx-4 px-1 md:mx-8 lg:mx-10"
>
  {{#each (sort-by "name" @meals) as |meal|}}
    <LinkTo
      @route="meals.meal"
      @model={{meal.id}}
      class="relative flex flex-col items-center justify-center m-3 hover:shadow-2xl overflow-hidden shadow-xl w-72 h-72 rounded-2xl"
    >
      <img
        class="absolute w-full h-72 transition-all hover:scale-150 duration-500 ease-in-out transform bg-center bg-cover"
        src="https://firebasestorage.googleapis.com/v0/b/food-delivery-app-d6445.appspot.com/o/{{meal.image}}?alt=media"
        alt="{{meal.name}}"
      />
      <div
        class="bg-white flex items-center font-semibold text-xl justify-center text-center absolute bottom-0 w-full h-16"
      >
        <span>
          {{meal.name}}
        </span>
      </div>
    </LinkTo>
  {{/each}}
</div>
