<nav
  class="bg-white nav dark:bg-gray-800 shadow border-b border-gray-200"
  {{on-click-outside (action 'someAction')}}
>
  <div
    class="px-6
      py-3
      mx-auto
      md:flex md:justify-between md:items-center"
  >
    <div class="flex items-center justify-between">
      <div>
        <LinkTo
          @route="index"
          class="text-xl
            font-bold
            text-gray-800
            dark:text-white capitalize
            md:text-2xl
            hover:text-gray-700 inline-block bg-transparent rounded  outline-none focus:ring-0
            dark:hover:text-gray-300"
        >
          Food Delivery
        </LinkTo>
      </div>
      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button
          type="button"
          class="text-gray-500
            dark:text-gray-200
            hover:text-gray-600
            dark:hover:text-gray-400 inline-block bg-transparent rounded  outline-none focus:ring-0
            focus:text-gray-600
            dark:focus:text-gray-400"
          {{on 'click' this.toggle}}
        >
          <svg viewBox="0 0 24 24" class="w-6 h-6 fill-current">
            <path
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile Menu open: "block", Menu closed: "hidden" -->
    {{#if this.isShow}}
      <div class="items-center">
        <div class="flex flex-col mt-3 md:mt-0 md:mx-6">
          <LinkTo
            class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200
            hover:text-green-600
            dark:hover:text-green-600 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
           md:mx-4 md:my-0"
            @route="meals"
          >
            Food Menu
          </LinkTo>
          <a
            class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200
            hover:text-green-600
            dark:hover:text-green-600 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
           md:mx-4 md:my-0"
            {{! @route="services.index" }}
          >
            How we work
          </a>
          <a
            class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200
            hover:text-green-600
            dark:hover:text-green-600 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
            md:mx-4 md:my-0"
            {{! @route="services.index" }}
          >
            Sign Up/ Log In
          </a>
        </div>
      </div>
    {{/if}}
    <div class="hidden md:flex">
      <div class="flex flex-col md:flex-row md:mx-6">
        <LinkTo
          class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
            hover:text-green-600
            dark:hover:text-green-600
            md:mx-4 md:my-0"
          @route="meals"
        >
          Food Menu
        </LinkTo>
        <a
          class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
            hover:text-green-600
            dark:hover:text-green-600
            md:mx-4 md:my-0"
          {{! @route="services.index" }}
        >
          How we work
        </a>
        <a
          class="my-1
            text-gray-700
            font-semibold
            dark:text-gray-200 inline-block bg-transparent rounded active:text-green-600 outline-none focus:ring-0
            hover:text-green-600
            dark:hover:text-green-600
           md:mx-4 md:my-0"
          {{! @route="services.index" }}
        >
          Sign Up/ Log In
        </a>
      </div>
    </div>
  </div>
</nav>