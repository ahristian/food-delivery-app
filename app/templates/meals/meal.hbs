{{page-title 'Meal Single Page'}}
<div class="w-full container">
  <div
    class="w-full grid grid-cols-1 md:gap-4 lg:gap-10 md:grid-cols-2 lg:grid-cols-12 place-content-start"
  >
    <div class="lg:col-span-7 flex justify-end">
      <img
        class="bg-cover border border-gray-300 shadow-xl rounded-xl"
        src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80); height:60vh;"
        style="background-image: linear-gradient(rgba(0, 0, 0, 0.47),rgba(0, 0, 0, 0)), url(https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
        alt="Korean bibimbap with egg and vegetables"
      />
    </div>
    <div
      class="lg:col-span-5 md:border md:border-gray-300 md:shadow-xl max-h-96 md:rounded-xl flex justify-start"
    >
      <div class="flex flex-col md:m-4 lg:m-6">
        <div class="text-3xl md:text-4xl lg:text-5xl mb-1 font-semibold">
          {{@model.name}}
        </div>
        <div class="flex flex-row md:mb-2 lg:mb-0">
          <div class="">
            *****
          </div>
          <div class="text-sm md:text-md">
            3.8 (34 reviews)
          </div>
        </div>
        <div class="text-2xl md:text-3xl lg:my-2 mb-4 font-semibold">
          {{@model.price}}
        </div>
        <div class="flex flex-row mb-4 gap-4">
          <LinkTo
            class="bg-white px-5 border border-gray-600 py-2.5 text-sm tracking-wide rounded-2xl font-semibold text-black"
            href="#"
            @route="meals"
          >
            Buy now
          </LinkTo>
          <LinkTo
            class="bg-green-600 px-5 py-2.5 text-sm tracking-wide rounded-2xl font-semibold text-white"
            href="#"
            @route="meals"
          >
            Add to cart
          </LinkTo>
        </div>
        <div class="flex items-center justify-center">
          <div class="my-2 border-t border-gray-100 w-full"></div>
        </div>
        <div class="mb-4">
          <div class="font-semibold">
            Meal Includes:
          </div>
          <ul class="list-disc ml-8">
            {{#each @model.menu as |item|}}
              <li class="">
                {{item}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-8">
    <div class="font-semibold text-xl md:text-2xl">
      Meal Description:
    </div>
    <div class="">
      {{#each @model.menu as |meal id|}}
        <div class="font-semibold mt-2">
          {{meal}}
        </div>
        {{#each (filter-by id @model.description) as |item|}}
          <div class="mt-1">
            {{item}}
          </div>
        {{/each}}
      {{/each}}
    </div>
  </div>
</div>